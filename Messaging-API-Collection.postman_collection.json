{
  "info": {
    "_postman_id": "messaging-api-tests",
    "name": "Messaging System - Testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up - Rider",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+1234567890\",\n  \"password\": \"password123\",\n  \"name\": \"John Rider\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/phone/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "phone", "signup"]
            }
          }
        },
        {
          "name": "Sign Up - Driver",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+1987654321\",\n  \"password\": \"password123\",\n  \"name\": \"Jane Driver\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/phone/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "phone", "signup"]
            }
          }
        },
